<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <Button
        android:id="@+id/btnHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trang chủ"
        android:layout_marginBottom="12dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtMaKhachHang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mã khách hàng"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/edtTenKhachHang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Họ tên"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/edtNgaySinhKH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ngày sinh"
                android:layout_marginBottom="8dp"/>

            <RadioGroup
                android:id="@+id/rgGioiTinhKH"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <RadioButton
                    android:id="@+id/rbNamKH"
                    android:text="Nam"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:checked="true"/>
                <RadioButton
                    android:id="@+id/rbNuKH"
                    android:text="Nữ"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </RadioGroup>

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/edtDienThoaiKH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Điện thoại"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <Button
                    android:id="@+id/btnThemKH"
                    android:text="Thêm"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"/>
                <Button
                    android:id="@+id/btnSuaKH"
                    android:text="Sửa"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <Button
                    android:id="@+id/btnXoaKH"
                    android:text="Xóa"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"/>
                <Button
                    android:id="@+id/btnClearKH"
                    android:text="Xóa trắng"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ListView
        android:id="@+id/lvKhachHang"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:padding="4dp"/>

</LinearLayout>
