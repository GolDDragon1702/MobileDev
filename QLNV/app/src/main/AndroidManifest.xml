<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="example.qlnv">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="QLNV"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QLNV"
        tools:targetApi="31">

        <!-- Main launcher activity -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.QLNV">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Các activity khác trong project -->
        <activity android:name=".activities.NhanVienActivity" android:exported="false" />
        <activity android:name=".activities.KhachHangActivity" android:exported="false" />
        <activity android:name=".activities.SanPhamActivity" android:exported="false" />
        <activity android:name=".activities.HoaDonActivity" android:exported="false" />
        <activity android:name=".activities.ChiTietHoaDonActivity" android:exported="false" />
        <activity android:name=".activities.ThongKeDoanhThuActivity" android:exported="false" />
        <activity android:name=".activities.SanPhamBanChayActivity" android:exported="false" />

    </application>

</manifest>
