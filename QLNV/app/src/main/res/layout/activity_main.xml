<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingHorizontal="16dp"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quản Lý Bán Hàng"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnNhanVien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý Nhân Viên" />

    <Button
        android:id="@+id/btnKhachHang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý Khách Hàng"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/btnSanPham"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý Sản Phẩm"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/btnHoaDon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý Hóa Đơn"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/btnChiTietHD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chi Tiết Hóa Đơn"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/btnThongKe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thống Kê Doanh Thu"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/btnSPBanChay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sản Phẩm Bán Chạy"
        android:layout_marginTop="12dp" />
</LinearLayout>
