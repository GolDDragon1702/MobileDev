<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:id="@+id/btnCreateDB"
            android:text="TẠO CƠ SỞ DỮ LIỆU"
            style="@style/ButtonPrimary"/>

        <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/btnNhapLop"
            android:text="NHẬP LỚP HỌC"
            style="@style/ButtonPrimary"/>

        <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/btnNhapSinhVien"
            android:text="NHẬP SINH VIÊN"
            style="@style/ButtonPrimary"/>

        <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/btnDanhSachLop"
            android:text="DANH SÁCH LỚP"
            style="@style/ButtonPrimary"/>

        <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/btnDanhSachSinhVien"
            android:text="DANH SÁCH SINH VIÊN"
            style="@style/ButtonPrimary"/>
    </LinearLayout>


</LinearLayout>

