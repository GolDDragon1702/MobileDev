<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CẬP NHẬT LỚP HỌC"
            android:textColor="@color/design_default_color_secondary"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:shrinkColumns="0">

        <TableRow
            android:layout_marginBottom="16dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã lớp:"
                android:textSize="16sp"
                android:padding="8dp" />

            <EditText
                android:id="@+id/etMaLop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập mã lớp"
                android:textSize="16sp"
                android:inputType="text"
                android:padding="8dp" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="16dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên lớp:"
                android:textSize="16sp"
                android:padding="8dp" />

            <EditText
                android:id="@+id/etTenLop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập tên lớp"
                android:textSize="16sp"
                android:inputType="text"
                android:padding="8dp" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="24dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sĩ số:"
                android:textSize="16sp"
                android:padding="8dp" />

            <EditText
                android:id="@+id/etSiSo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập sĩ số"
                android:textSize="16sp"
                android:inputType="number"
                android:padding="8dp" />
        </TableRow>

    </TableLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:weightSum="3">

        <Button
            android:id="@+id/btnLuuLop"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Lưu lớp"
            android:layout_marginEnd="8dp"
            style="@style/ButtonPrimary"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnXoa"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Xóa"
            android:layout_marginEnd="8dp"
            style="@style/ButtonPrimary"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnTroVe"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Trở về"
            style="@style/ButtonPrimary"
            android:padding="12dp" />
    </LinearLayout>

</LinearLayout>

    </ScrollView>
