<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".activities.SinhVienActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CẬP NHẬT SINH VIÊN"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#009688"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Dùng LinearLayout ngang làm hàng, TextView cố định 120dp, EditText giãn -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="MSSV:"
                android:textSize="16sp"
                android:textColor="#212121" />

            <EditText
                android:id="@+id/etMSSV"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Nhập mã số sinh viên"
                android:textSize="16sp"
                android:inputType="text"
                android:paddingHorizontal="12dp"
                android:textColor="#212121"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Họ tên:"
                android:textSize="16sp"
                android:textColor="#212121" />

            <EditText
                android:id="@+id/etHoTen"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Nhập họ tên"
                android:textSize="16sp"
                android:inputType="textPersonName"
                android:paddingHorizontal="12dp"
                android:textColor="#212121"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Ngày sinh:"
                android:textSize="16sp"
                android:textColor="#212121" />

            <EditText
                android:id="@+id/etNgaySinh"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Chọn ngày sinh"
                android:textSize="16sp"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:paddingHorizontal="12dp"
                android:textColor="#212121"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Địa chỉ:"
                android:textSize="16sp"
                android:textColor="#212121" />

            <EditText
                android:id="@+id/etDiaChi"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Nhập địa chỉ"
                android:textSize="16sp"
                android:inputType="textPostalAddress"
                android:paddingHorizontal="12dp"
                android:textColor="#212121"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Điện thoại:"
                android:textSize="16sp"
                android:textColor="#212121" />

            <EditText
                android:id="@+id/etDienThoai"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Nhập số điện thoại"
                android:textSize="16sp"
                android:inputType="phone"
                android:paddingHorizontal="12dp"
                android:textColor="#212121"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Lớp:"
                android:textSize="16sp"
                android:textColor="#212121" />

            <Spinner
                android:id="@+id/spnMaLop"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:paddingHorizontal="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">

            <Button
                android:id="@+id/btnLuuSV"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="Lưu Sinh Viên"
                android:layout_marginEnd="16dp"
                style="@style/ButtonPrimary"/>

            <Button
                android:id="@+id/btnTroVe"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="Trở về"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#9E9E9E"
                android:fontFamily="sans-serif-medium"
                android:elevation="4dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
