<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:padding="20dp"
    tools:context=".ConvertTemp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtTitle"
        android:text="CHUYỂN ĐỔI NHIỆT ĐỘ"
        android:textStyle="bold"
        android:textColor="@color/design_default_color_primary_dark">
    </TextView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:id="@+id/FandC">

        <TableRow>
            <TextView
                android:text="Độ F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edtF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:backgroundTint="#000"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="Độ C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edtC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:backgroundTint="#000"/>
        </TableRow>

    </TableLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/FandC"
        android:text="Chuyển F -> C"
        android:id="@+id/btnToC">
    </Button>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnToC"
        android:text="Chuyển C -> F"
        android:id="@+id/btnToF">
    </Button>

</RelativeLayout>